  "private": false,
  "description": "All functionality shared between frontend projects.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
